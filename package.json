{
  "name": "@envato/react-resize-observer-hook",
  "version": "1.0.1",
  "description": "Observe multiple React components with a single ResizeObserver.",
  "main": "dist/index.js",
  "scripts": {
    "build": "babel src/ -d dist/ --source-maps",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/envato/react-resize-observer-hook.git"
  },
  "keywords": [
    "react-hooks",
    "hooks",
    "react",
    "performance",
    "resize-observer"
  ],
  "author": "Envato",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/envato/react-resize-observer-hook/issues"
  },
  "homepage": "https://github.com/envato/react-resize-observer-hook#readme",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.6",
    "@babel/preset-env": "^7.7.7",
    "@babel/preset-react": "^7.8.3",
    "husky": "^4.3.7",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "eslint --cache --fix",
      "prettier --write"
    ]
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": true,
    "printWidth": 120,
    "quoteProps": "preserve",
    "semi": true,
    "singleQuote": true,
    "trailingComma": "none"
  }
}
